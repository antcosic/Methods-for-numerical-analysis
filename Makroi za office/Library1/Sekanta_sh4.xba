next j


for i = 6 to broj_iteracija.getValue() + 6
	x1 = Sheet.getCellByPosition(20, i-2)
	iks1 = x1.getValue()
	nultocka.value=iks1
	fx1=f.getValue()
	x2 = Sheet.getCellByPosition(20, i-1)
	iks2 = x2.getValue()
	nultocka.value=iks2
	fx2=f.getValue()
	if ((fx2 - fx1) = 0) then 
		msgbox(&quot;Iteriranje prekinuto! Razlika vrijednosti funkcije u prethodne dvije toƒçke jednaka je 0.&quot;)
		exit sub
	end if
	
	n = Sheet.getCellByPosition(19, i)
	n.value = i-3
	
	xn = Sheet.getCellByPosition(20, i)
	xn.value=iks2-(((iks2-iks1)/(fx2-fx1))*fx2)
	nultocka.value = xn.getValue()
	fn = Sheet.getCellByPosition(21, i)
	fn.value=f.getValue()
next i

End Sub

